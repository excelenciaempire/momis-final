modules = ["nodejs-20", "web", "nix"]
[nix]
channel = "stable-24_05"

language = "nodejs"

entrypoint = "momi_project/backend/index.js"

[packager]
language = "nodejs"
[packager.features]
packageSearch = true

[env]
PORT = "3001"

[deployment]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "(cd momi_project/frontend_admin && rm -rf dist node_modules package-lock.json && npm install && npm run build) && (cd momi_project/frontend_widget && npm install && npm run build) && (cd momi_project/backend && npm install)"]
run = ["sh", "-c", "cd momi_project && npm start"]

[[ports]]
localPort = 3001
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 11571
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 16631
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 62463
externalPort = 3003
exposeLocalhost = true

[[ports]]
localPort = 65063
externalPort = 3002
exposeLocalhost = true

[workflow]
[workflow.default]
name = "Build and Run"
author = 41873379
mode = "sequential"

[[workflow.default.tasks]]
task = "shell.exec"
args = "cd momi_project/backend && npm install && npm run build && node index.js"

[workflows]
runButton = "Build and Run"

[[workflows.workflow]]
name = "test"
mode = "sequential"
author = 41873379

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd momi_project/backend && npm install && node index.js"

[[workflows.workflow]]
name = "Build and Run"
author = 41873379
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd momi_project && npm install && npm run dev"

[agent]
expertMode = true
